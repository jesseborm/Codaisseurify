<!-- In songs view -->

<div class="row">
  <div class="col-md-6 text-left">


  <!-- Error messages -->

    <h2>Add new song for <%=  @artist.name %> </h2>
    <%= form_for [@artist,@artist.songs.new], remote: true do |f| %>
    <%#= form_for [@artist, @song] do |f| %>

      <div class="form-group">
        <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :album, placeholder: "Album", class: "form-control" %>
      </div>

      <div class="form-group">
        Year of release:
        <%= f.date_select :year, {:start_year => Time.now.year, :end_year => Time.now.year - 95, :discard_day => true, :discard_month => true} %>

      </div>

      <div class="actions">
        <%= f.submit "Save", remote: true, class: "btn btn-primary" %>
      </div>

    <% end %>
