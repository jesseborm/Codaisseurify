<div class="row">
  <div class="col-md-10">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h4><%= @artist.name %></h4>
      </div>
      <div class="panel-body">
        <%= @artist.image %>   <!-- image in the photo in the artist, nested resoureces?? -->
        <% @artist.songs.each do |song| %>
        <div class="row">
          <div class="col-md-9">
            <h5> <%= song.title %> </h5>
            <!-- <div class="col-md-9 right"> -->
              <%= link_to "Edit song", edit_artist_song_path(song), remote: true, class: "btn btn-default" %>
              <%= link_to "Delete", artist_song_path(@artist, song), method: :delete, remote: true, data: { confirm: "Are you sure?" }, class: "btn btn-default" %>
              <%= link_to "View", @song, class: "btn btn-default" %>
            <!-- </div> -->
          </div>
        </div>
        <% end %>
        <hr>
        <!-- artist_path(@artist), method: :delete, remote: true,  -->
        <%= link_to "Delete all songs", '#',
        data: { confirm: "Are you sure you want to delete all songs?" }, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
