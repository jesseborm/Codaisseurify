<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">


  <!-- Error messages -->
    <% @song.errors.full_messages.each do |msg| %>
    <p class="alert alert-danger"><%= msg %></p>
  <% end %>

    <h2>Add new song for <%=  @artist %> </h2>
  <!-- TRY out form new registrations form -->
  <% debugger %>
    <%= form_for [@artist,@artist.songs.new] do |f| %>

      <div class="form-group">
        <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :album, placeholder: "Album", class: "form-control" %>
      </div>

      <div class="form-group">
        Year of release:
        <%= f.date_select :year, {:start_year => Time.now.year, :end_year => Time.now.year - 95, :discard_day => true, :discard_month => true} %>

      </div>

      <div class="actions">
        <%= f.submit "Save", class: "btn btn-primary" %>
      </div>

    <% end %>
