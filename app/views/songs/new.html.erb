<div class="row">
  <div class="col-md-10 col-md-offset-3">

    <!-- Error messages, Where is the notice inserted???? FIXME-->
      <% @song.errors.full_messages.each do |msg| %>
      <p class="alert alert-danger"><%= msg %></p>
    <% end %>

    <h2>Add new song for <%=  @artist.name %> </h2>
  <!-- TRY out form new registrations form -->
    <%= form_for [@artist, @song] do |f| %>

      <div class="form-group">
        <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :album, placeholder: "Album", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :year %>
        <%= f.number_field :year, size: 4, within: 1500..2100, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Save", class: "btn btn-primary" %>
      </div>

    <% end %>

  </div>
</div>
<br>
<div class="row">
  <div class="col-md-10">
    <%= link_to "Back", artist_path(@artist), class: "btn btn-primary" %>
  </div>
</div>
