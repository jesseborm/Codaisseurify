<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">

    <h2>Add new song for </h2>

    <%= form_for @song do |f| %>

      <div class="form-group">
        <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :album, placeholder: "Album", class: "form-control" %>
      </div>

      <div class="form-group">
        Year of release: 
        <%= f.date_select :year, {:start_year => Time.now.year, :end_year => Time.now.year - 95, :discard_day => true, :discard_month => true} %>

      </div>




    <% end %>

    <hr>
    <%= link_to "Back", artists_path %>
  </div>
</div>
